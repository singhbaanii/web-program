<%- include('../../shared/includes/head', { pageTitle: 'Your Cart' }) %>
<link rel="stylesheet" href="/styles/cart.css">
<script src="/scripts/cart-item-management.js" defer></script>
</head>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Your Cart</h1>
    <ul id="cart-items">
      <% for (const cartItem of locals.cart.items) { %>
        <li>
          <%- include('includes/cart-item', { item: cartItem }) %>
        </li>
      <% } %>
    </ul>
    <div id="cart-total">
      <p>Total: â‚¬<span id="cart-total-price"><%= locals.cart.totalPrice.toFixed(2) %></span></p>

      <% if (user) { %>
        <% if (locals.cart.items.length === 0) { %>
          <p id="cart-total-fallback">Your cart is empty. Add items to your cart before proceeding.</p>
        <% } else { %>
          <form action="/orders" method="POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <button id="buy-products-btn" class="btn">Buy Products</button>
          </form>
        <% } %>
      <% } else { %>
        <p id="cart-total-fallback">Log in to proceed and purchase the items.</p>
      <% } %>
    </div>
  </main>
  <%- include('../../shared/includes/footer') %>

 
